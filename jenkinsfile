pipeline {
    agent any


    environment {
        AWS_ACCESS_KEY_ID     = credentials('aws-secret-key-id')
        AWS_SECRET_ACCESS_KEY = credentials('aws-secret-access-key')
        }
    

    stages {
        stage('Plan') {
            steps {
                echo "Plan Stage"
                sh "terraform init"
                sh "terraform plan"
            }
        }
       
       stage('Appy Resources') {
            steps {
                input message: "Do you want to apply?"
            }
       }
        stage('Deploy') {
            steps {
                echo "Deploy Stage"
                sh "terraform apply -auto-approve"
            }
        }
    }
}
